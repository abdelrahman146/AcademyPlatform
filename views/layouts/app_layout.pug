doctype html
html(lang=(locale.lang), dir=(locale.dir) class=(dark ? 'dark-mode' : ""))
  includes includes/head.pug
  body.layout-app
    .preloader
      .sk-chase
        .sk-chase-dot
        .sk-chase-dot
        .sk-chase-dot
        .sk-chase-dot
        .sk-chase-dot
        .sk-chase-dot
    // Drawer Layout
    .mdk-drawer-layout.js-mdk-drawer-layout(data-push='', data-responsive-width='992px')
      .mdk-drawer-layout__content.page-content
        // Header
        // Navbar
        #default-navbar.navbar.navbar-expand.pr-0.border-bottom-2(data-primary='', class=(dark ? 'navbar-dark' : 'navbar'))
          // Navbar Toggler
          button.navbar-toggler.w-auto.mr-16pt.d-block.d-lg-none.rounded-0(type='button', data-toggle='sidebar')
            span.material-icons short_text
          // // END Navbar Toggler
          // Navbar Brand
          a.navbar-brand.mr-16pt.d-lg-none(href='index.html')
            span.avatar.avatar-sm.navbar-brand-icon.mr-0.mr-lg-8pt
              span.avatar-title.rounded.bg-primary
                img.img-fluid(src='/images/logo/logo.svg', alt=siteTitle)
            span.d-none.d-lg-block #{siteTitle}
          // // END Navbar Brand
          span.d-none.d-md-flex.align-items-center.mr-16pt
            span.avatar.avatar-sm.mr-12pt
              span.avatar-title.rounded.navbar-avatar
                i.material-icons trending_up
            small.flex.d-flex.flex-column
              strong.navbar-text-100 Earnings
              span.navbar-text-50 $12.3k
          span.d-none.d-md-flex.align-items-center.mr-16pt
            span.avatar.avatar-sm.mr-12pt
              span.avatar-title.rounded.navbar-avatar
                i.material-icons receipt
            small.flex.d-flex.flex-column
              strong.navbar-text-100 Sales
              span.navbar-text-50 264
          .flex
          // Navbar Menu
          .nav.navbar-nav.flex-nowrap.d-flex.mr-16pt
            // Languages
            each loc in locales
              unless loc.lang === locale.lang
                a.nav-item(href=(`/${loc.lang}${path}`))
                  img.nav-link(src=`/flags/${loc.lang}.svg`, alt=loc.lang height="24", width="32")
            // Notifications dropdown
            .nav-item.dropdown.dropdown-notifications.dropdown-xs-down-full(data-toggle='tooltip', data-title='Messages', data-placement='bottom', data-boundary='window')
              button.nav-link.btn-flush.dropdown-toggle(type='button', data-toggle='dropdown', data-caret='false')
                i.material-icons.icon-24pt mail_outline
              .dropdown-menu.dropdown-menu-right
                .position-relative(data-perfect-scrollbar='')
                  .dropdown-header
                    strong Messages
                  .list-group.list-group-flush.mb-0
                    a.list-group-item.list-group-item-action.unread(href='javascript:void(0);')
                      span.d-flex.align-items-center.mb-1
                        small.text-black-50 5 minutes ago
                        span.ml-auto.unread-indicator.bg-accent
                      span.d-flex
                        span.avatar.avatar-xs.mr-2
                          img.avatar-img.rounded-circle(src='/images/people/110/woman-5.jpg', alt='people')
                        span.flex.d-flex.flex-column
                          strong.text-black-100 Michelle
                          span.text-black-70 Clients loved the new design.
                    a.list-group-item.list-group-item-action(href='javascript:void(0);')
                      span.d-flex.align-items-center.mb-1
                        small.text-black-50 5 minutes ago
                      span.d-flex
                        span.avatar.avatar-xs.mr-2
                          img.avatar-img.rounded-circle(src='/images/people/110/woman-5.jpg', alt='people')
                        span.flex.d-flex.flex-column
                          strong.text-black-100 Michelle
                          span.text-black-70 &#x1F525; Superb job..
            // // END Notifications dropdown
            // Notifications dropdown
            .nav-item.ml-16pt.dropdown.dropdown-notifications.dropdown-xs-down-full(data-toggle='tooltip', data-title='Notifications', data-placement='bottom', data-boundary='window')
              button.nav-link.btn-flush.dropdown-toggle(type='button', data-toggle='dropdown', data-caret='false')
                i.material-icons notifications_none
                span.badge.badge-notifications.badge-accent 2
              .dropdown-menu.dropdown-menu-right
                .position-relative(data-perfect-scrollbar='')
                  .dropdown-header
                    strong System notifications
                  .list-group.list-group-flush.mb-0
                    a.list-group-item.list-group-item-action.unread(href='javascript:void(0);')
                      span.d-flex.align-items-center.mb-1
                        small.text-black-50 3 minutes ago
                        span.ml-auto.unread-indicator.bg-accent
                      span.d-flex
                        span.avatar.avatar-xs.mr-2
                          span.avatar-title.rounded-circle.bg-light
                            i.material-icons.font-size-16pt.text-accent account_circle
                        span.flex.d-flex.flex-column
                          span.text-black-70 Your profile information has not been synced correctly.
                    a.list-group-item.list-group-item-action(href='javascript:void(0);')
                      span.d-flex.align-items-center.mb-1
                        small.text-black-50 5 hours ago
                      span.d-flex
                        span.avatar.avatar-xs.mr-2
                          span.avatar-title.rounded-circle.bg-light
                            i.material-icons.font-size-16pt.text-primary group_add
                        span.flex.d-flex.flex-column
                          strong.text-black-100 Adrian. D
                          span.text-black-70 Wants to join your private group.
                    a.list-group-item.list-group-item-action(href='javascript:void(0);')
                      span.d-flex.align-items-center.mb-1
                        small.text-black-50 1 day ago
                      span.d-flex
                        span.avatar.avatar-xs.mr-2
                          span.avatar-title.rounded-circle.bg-light
                            i.material-icons.font-size-16pt.text-warning storage
                        span.flex.d-flex.flex-column
                          span.text-black-70 Your deploy was successful.
            // // END Notifications dropdown
            .nav-item.dropdown
              a.nav-link.d-flex.align-items-center.dropdown-toggle(href='#', data-toggle='dropdown', data-caret='false')
                span.avatar.avatar-sm.mr-8pt2
                  span.avatar-title.rounded-circle.bg-primary
                    i.material-icons account_box
              .dropdown-menu.dropdown-menu-right
                .dropdown-header
                  strong Account
                a.dropdown-item(href='edit-account.html') Edit Account
                a.dropdown-item(href='billing.html') Billing
                a.dropdown-item(href='billing-history.html') Payments
                a.dropdown-item(href='login.html') Logout
          // // END Navbar Menu
        // // END Navbar
        // // END Header
        // BEFORE Page Content
        block pre_content
        // // END BEFORE Page Content
        // Page Content
        block content
        // // END Page Content
        block post_content
        // Footer
        .border-top-2.mt-auto
          .container.page__container.page-section.d-flex.flex-column
            p.text-70.brand.mb-24pt
              img.brand-icon(src=`/images/logo/logo${dark ? "": "-dark"}.svg`, width='30', alt='Fullmoon Academy')
              |  #{siteTitle}
            p.measure-lead-max.text-50.small.mr-8pt
              | Luma is a beautifully crafted user interface for modern Education Platforms, including Courses &amp; Tutorials, Video Lessons, Student and Teacher Dashboard, Curriculum Management, Earnings and Reporting, ERP, HR, CMS, Tasks, Projects, eCommerce and more.
            p.mb-8pt.d-flex
              a.text-70.text-underline.mr-8pt.small(href='') Terms
              a.text-70.text-underline.small(href='') Privacy policy
            p.text-50.small.mt-n1.mb-0 Copyright 2019 &copy; All rights reserved.
        // // END Footer
      // // END drawer-layout__content
      // Drawer
      #default-drawer.mdk-drawer.js-mdk-drawer
        .mdk-drawer__content
          .sidebar.sidebar-left(data-perfect-scrollbar='', class=(dark ? 'sidebar-black-dodger-blue' : 'sidebar-dark-pickled-bluewood'))
            // Sidebar Content
            .d-flex.align-items-center.navbar-height
              form.search-form.search-form--black.mx-16pt.pr-0.pl-16pt(action='index.html')
                input.form-control.pl-0(type='text', placeholder='Search')
                button.btn(type='submit')
                  i.material-icons search
            a.sidebar-brand(href='index.html')
              // <img class="sidebar-brand-icon" src="/images/logo/logo.webp" alt="Luma">
              span.avatar.avatar-xl.sidebar-brand-icon.h-auto
                span.avatar-title.rounded.bg-primary
                  img.img-fluid(src='/images/logo/logo.svg', alt='logo', style={'margin': '5px'})
              span #{siteTitle}
            block side_nav
            // // END Sidebar Content
      // // END Drawer
    // // END Drawer Layout
    // jQuery
    script(src='/vendor/jquery.min.js')
    // Bootstrap
    script(src='/vendor/popper.min.js')
    script(src='/vendor/bootstrap.min.js')
    // Perfect Scrollbar
    script(src='/vendor/perfect-scrollbar.min.js')
    // DOM Factory
    script(src='/vendor/dom-factory.js')
    // MDK
    script(src='/vendor/material-design-kit.js')
    // App JS
    script(src='/js/app.js')
    // Preloader
    script(src='/js/preloader.js')
    block scripts