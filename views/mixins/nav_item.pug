mixin nav_item(item)
  if item.children
    li.nav-item.dropdown
      a.nav-link.dropdown-toggle(href=(path === item.path ? 'active' : '') data-toggle='dropdown' data-caret='false' aria-expanded='false') 
      | #{t(`navbar.menu.${item.key}`)}
      .dropdown-menu
        each child in item.children
          a.dropdown-item(href=child.path) #{t(`navbar.menu.${child.key}`)}
  else
    li.nav-item(class=(path === item.path ? 'active' : ''))
      a.nav-link(href=item.path) #{t(`navbar.menu.${item.key}`)}
